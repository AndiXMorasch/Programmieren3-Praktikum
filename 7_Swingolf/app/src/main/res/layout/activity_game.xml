<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Game"
        android:background="@color/hellgruen">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score Card"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:textStyle="bold"
            android:textSize="55dp"
            android:layout_alignParentTop="true"
            android:textColor="@color/dunkelgruen"
            android:fontFamily="@font/amatic_sc"/>

    <Button
            android:id="@+id/neuesSpiel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Neues Spiel"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/dunkelgruen"
            android:onClick="neuesSpiel"
            tools:ignore="OnClick"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"/>
    <Button
            android:id="@+id/spielabbruch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="spiel abbrechen"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/dunkelgruen"
            android:onClick="spielabbruch"
            tools:ignore="OnClick"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"/>

</RelativeLayout>