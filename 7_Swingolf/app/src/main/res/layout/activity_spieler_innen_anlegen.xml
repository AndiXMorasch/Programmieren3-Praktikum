<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent" android:layout_height="match_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:fillViewport="true">

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/hellgruen">

    <!--Icon Bilder aus: https://fonts.google.com/icons?selected=Material+Icons-->
    <Button
            android:id="@+id/zurueckZumHauptmenue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zurück zum Hauptmenü"
            android:layout_alignParentTop="true"
            android:drawableLeft="@drawable/baseline_arrow_back_24"
            android:layout_marginTop="0dp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/dunkelgruen"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spielername*:"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75dp"
            android:textSize="17sp"
            android:layout_alignParentTop="true"
            android:textColor="@color/dunkelgruen"/>

    <EditText
            android:id="@+id/spielername"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="100dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spitzname / Synonym:"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:textSize="17sp"
            android:layout_alignParentTop="true"
            android:textColor="@color/dunkelgruen"/>

    <EditText
            android:id="@+id/spitzname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="225dp"/>

    <Button
            android:id="@+id/aenderungenSpeichern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Änderungen speichern"
            android:layout_alignParentTop="true"
            android:layout_marginTop="290dp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/dunkelgruen"
            android:onClick="saveSpieler" tools:ignore="OnClick"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mit * markierte Felder sind Pflichtfelder!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="360dp"
            android:textSize="14sp"
            android:layout_alignParentTop="true"
            android:textColor="@color/dunkelgruen"
            android:layout_centerHorizontal="true"/>

</RelativeLayout>

</ScrollView>